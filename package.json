{
  "name": "odiff",
  "version": "0.1.0",
  "description": "The fastest image difference comparison CLI",
  "license": "MIT",
  "esy": {
    "build": "dune build -p #{self.name}",
    "buildDev":
      "refmterr dune build --promote-install-files --root . --only-package #{self.name}",
    "NOTE": "Optional release Section. Customizes result of `esy release`",
    "release": { "rewritePrefix": true, "bin": [ "ODiffBin" ] },
    "buildEnv": { "ODOC_SYNTAX": "re" }
  },
  "scripts": {
    "run": "esy x ODiffBin",
    "test": "esy x RunTests.exe",
    "format": "esy dune build @fmt --auto-promote",
    "doc": "esy dune build @doc"
  },
  "dependencies": {
    "@esy-ocaml/reason": ">= 3.6.0 < 4.0.0",
    "@opam/camlimages": "5.0.4",
    "@opam/core": "v0.14.0",
    "@opam/dune": ">=2.6",
    "@opam/ppx_let": "v0.14.0",
    "@reason-native/console": "*",
    "@reason-native/pastel": "*",
    "ocaml": "~4.10.0"
  },
  "devDependencies": {
    "@opam/merlin": "*",
    "@reason-native/rely": "*",
    "refmterr": "*",
    "@opam/odoc": "*"
  }
}